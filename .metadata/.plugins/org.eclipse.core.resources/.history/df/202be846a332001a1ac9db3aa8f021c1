<body onload="alert('페이지로딩')">
	<!-- submit버튼은 form에 한개밖에 못 만든다! -->
	<!-- submit버튼은 action의 백엔드 어플리케이션을 실행하면서 입력한 name value 모두를 서버로 전송한다. -->
	<form name="myform" action="test.jsp">
		<!-- 다른칸으로 이동해서 값이 변경된 것이 확정(인지)되었을 때 함수호출 -->
		<input type="text" name="num1" onchange="calc()">
		<input type="text" name="num2">
		<input type="button" value="전송1" onclick="formexe(this.form)"> 
		<!-- 서버작업을 2개 호출하고 싶을 때? 어쩔수없이 button쓰고 onclick-->
		<input type="submit" value="전송2">
	</form>
	<form name="myform2" action="test.jsp">
		<!-- 다른칸으로 이동해서 값이 변경된 것이 확정(인지)되었을 때 함수호출 -->
		<input type="text" name="num1" onchange="calc()">
		<input type="text" name="num2">
		<input type="button" value="전송1" onclick=""> 
		<!-- 서버작업을 2개 호출하고 싶을 때? 어쩔수없이 button쓰고 onclick-->
		<input type="submit" value="전송2">
	</form>
	<form name="myform3" action="test.jsp">
