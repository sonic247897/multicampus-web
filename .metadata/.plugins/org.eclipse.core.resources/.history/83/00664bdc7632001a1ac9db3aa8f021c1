	<script type="text/javascript">
		//window.confirm, window.alert 연습
		function testConfirm(){
			/* 브라우저 객체 모델. boolean을 리턴 */
			result = window.confirm("정말 삭제할꺼야?");
			//window.alert(result);
			// => if로 제어 가능하다.
			if(result){
				alert("실제 db에서 삭제수행하기");
			}else{
				alert("삭제 취소");
			}
		}
		//window.open, window.close 연습
		function searchAddress(){
			// path를 줄 수 있는 모든 곳에서 상대경로, 절대경로 똑같이 쓸 수 있다.
			// 텍스트로 써줘야 하며 ','로 구분한다.
			mypopup = window.open("js_popup.html", "mywin", 
					"width=300, height=300, top=100");
			//팝업 - 병뚜껑(팝업창), 오프너 - 병따개(팝업창을 부른 브라우저)
		}
		
		function idcheck(){
			//크롬의 정책: popup에 포커스 맞춰져 있어서 브라우저를 내리면 alert를 볼 수 있다. 
			// alert는 시스템에 종속된 대화상자
			mypopup2 = window.open("js_popup.html", "mywin", 
					"width=300, height=300, top=100");
			//alert(window.document.myform.id.value); //id창의 텍스트를 디버깅
			// mypopup2는 팝업창(open객체). 'open객체'가 표준은 아니므로 자동완성X
			/* mypopup2.document.mypopup.data.value = 
						myform.id.value; //opener의 id에 입력한 값을 팝업의 data로 넘긴다. */
		}
		function test_number(){
			num1 = myform.num1.value; //value속성이 '=' 오른쪽에 위치하면: getter
			num2 = myform.num2.value; 
			myform.result.value = num1+num2; //value속성이 '=' 왼쪽에 위치하면: setter
		}
		function test_number2(){
			
		}
	</script>
</head>
<body>
	<!-- 사실 alert는 window에서 제공하는 메소드였음  -->
	<!-- <button~ 은 html5의 표기방식  -->
	<button onClick="window.alert('경고창')">경고창</button>
	<button onClick="testConfirm()">확인창</button>
	<button onClick="test_number()">숫자처리메서드</button>
	<button onClick="test_number2()">숫자처리메서드2</button>
	<button onClick="window.close()">닫기</button>
	
	<form action="" name="myform">
		아이디: <input type="text" name="id">	 <!-- value가 생략된것 -->
		<input type="button" value="아이디체크" onClick="idcheck()">
		<br>
	
		우편번호 : <input type="text" name="zipcode"	>
		<input type="button" value="SEARCH ADDRESS" onClick="searchAddress()">
		<br>
		
		상세주소 : <input type="text" name="address"><br>
		<input type="submit" value="SEND">
		num1 : <input type="text" name="num1"><br>
		<input type="submit" value="SEND">
		num2 : <input type="text" name="num2"><br>
		<input type="submit" value="SEND">
		결과 : <input type="text" name="result"><br>
		<input type="submit" value="SEND">
	</form>
