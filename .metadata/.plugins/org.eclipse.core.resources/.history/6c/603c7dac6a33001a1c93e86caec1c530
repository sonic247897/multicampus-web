	<script type="text/javascript">
		// 이벤트 핸들러에 붙어있는 함수 - 선언문으로 정의
		function insertP(){
			pNode = document.createElement("p");
			// text가 없으면 p의 부피가 없으므로 추가되어도 안보인다.
			textNode = document.createTextNode("newP");
			pNode.appendChild(textNode);
			pNode.setAttribute("style", "background: yellow;");
			parentNode = document.getElementById("root");
			parentNode.appendChild(pNode);
		}
		
		function deleteP(){
			parentNode = document.getElementById("root");
			// 두번 클릭 안되게 하기
			/* if(parentNode.lastChild.nodeName == "#text"){
				parentNode.removeChild(parentNode.lastChild);
			}
			parentNode.removeChild(parentNode.lastChild); */
			parentNode.removeChild(parentNode.lastElementChild);
		}
		
		function deleteDivAndP(){
			// root의 모든 하위 엘리먼트 제거
			parentNode = document.getElementById("root");
			childnodelist = div.childNodes;
			// length변수는 자동으로 변하므로 for문 조건에 넣기 전에 저장해야 한다.
			size = childnodelist.length;
			for(i=0; i<size; ++i){
				div.removeChild(div.lastChild);
			}
			
		}
	
	</script>
</head>
