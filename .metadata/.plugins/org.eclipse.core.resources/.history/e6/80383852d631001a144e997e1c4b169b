		//window.confirm, window.alert 연습
		function testConfirm(){
			/* 브라우저 객체 모델. boolean을 리턴 */
			result = window.confirm("정말 삭제할꺼야?");
			//window.alert(result);
			// => if로 제어 가능하다.
			if(result){
				alert("실제 db에서 삭제수행하기");
			}else{
				alert("삭제 취소");
			}
		}
		//window.open, window.close 연습
		function searchAddress(){
			// path를 줄 수 있는 모든 곳에서 상대경로, 절대경로 똑같이 쓸 수 있다.
			// 텍스트로 써줘야 하며 ','로 구분한다.
			mypopup = window.open("js_popup.html", "mywin", 
					"width=300, height=300, top=100");
			//팝업 - 병뚜껑(팝업창), 오프너 - 병따개(팝업창을 부른 브라우저)
		}
		
		function idcheck(){
			mypopup2 = window.open("js_popup.html", "mywin", 
					"width=300, height=300, top=100");
			// 'open객체'가 표준은 아니므로 자동완성X
			mypopup2.document.
		}
	</script>
